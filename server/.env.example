# =============================================================================
# ROXONN PLATFORM - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values
# Required variables are marked with [REQUIRED]
# Optional variables have sensible defaults
# =============================================================================

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=5000
BASE_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000
COOKIE_DOMAIN=localhost

# -----------------------------------------------------------------------------
# DATABASE [REQUIRED]
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/roxonn

# -----------------------------------------------------------------------------
# GITHUB OAUTH [REQUIRED]
# Create OAuth App: https://github.com/settings/developers
# -----------------------------------------------------------------------------
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:5000/api/auth/github/callback

# -----------------------------------------------------------------------------
# GITHUB APP (For private repos and webhooks)
# Create GitHub App: https://github.com/settings/apps
# -----------------------------------------------------------------------------
GITHUB_APP_ID=your_app_id
GITHUB_APP_NAME=your-app-name
GITHUB_APP_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"
GITHUB_APP_WEBHOOK_SECRET=your_webhook_secret
GITHUB_ORG=Roxonn-FutureTech

# -----------------------------------------------------------------------------
# SECURITY [REQUIRED]
# Generate with: openssl rand -hex 32
# -----------------------------------------------------------------------------
JWT_SECRET=your_jwt_secret_min_32_chars
SESSION_SECRET=your_session_secret_min_32_chars
ENCRYPTION_KEY=your_encryption_key_32_chars

# -----------------------------------------------------------------------------
# BLOCKCHAIN - XDC NETWORK
# -----------------------------------------------------------------------------
# XDC Mainnet RPC (default provided, but use your own for production)
XDC_RPC_URL=https://rpc.xinfin.network

# Relayer wallet private key (for meta-transactions) [REQUIRED for blockchain features]
PRIVATE_KEY=your_relayer_wallet_private_key

# Smart Contract Addresses (XDC Mainnet)
DUAL_CURRENCY_REWARDS_CONTRACT_ADDRESS=0x...
ROXN_TOKEN_ADDRESS=0xD0b99c496e7Bd6EFE62Fc4cBfB2A796B62e59c2c
FORWARDER_CONTRACT_ADDRESS=0x3bF77b9192E1bc9d780fcA8eC51C2a0edc2B8aD5
USDC_XDC_ADDRESS=0xfA2958CB79b0491CC627c1557F441eF849Ca8eb1

# Platform fee settings
FEE_COLLECTOR_ADDRESS=0x...
PLATFORM_FEE_RATE=50
CONTRIBUTOR_FEE_RATE=50

# -----------------------------------------------------------------------------
# WALLET SERVICES
# -----------------------------------------------------------------------------
# Tatum API (for wallet generation)
TATUM_API_KEY=your_tatum_api_key

# AWS KMS (for wallet encryption) - Optional, uses local encryption if not set
AWS_REGION=us-east-1
WALLET_KMS_KEY_ID=your_kms_key_id

# -----------------------------------------------------------------------------
# PAYMENT SERVICES (Optional - for fiat onramp)
# -----------------------------------------------------------------------------
ONRAMP_MONEY_APP_ID=your_onramp_app_id
ONRAMP_MONEY_API_KEY=your_onramp_api_key
ONRAMP_MONEY_SECRET_KEY=your_onramp_secret
ONRAMP_MONEY_BASE_URL=https://onramp.money/main/buy/

# -----------------------------------------------------------------------------
# EMAIL SERVICES (Optional - for OTP)
# -----------------------------------------------------------------------------
AWS_SES_REGION=us-east-1
SUPPORT_EMAIL=connect@roxonn.com

# -----------------------------------------------------------------------------
# AI SERVICES (Optional - for VSCode AI features)
# -----------------------------------------------------------------------------
# Azure OpenAI
AZURE_OPENAI_KEY=your_azure_openai_key
AZURE_OPENAI_ENDPOINT=https://your-endpoint.openai.azure.com
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# -----------------------------------------------------------------------------
# COURSE/VIDEO HOSTING (Optional - for course features)
# -----------------------------------------------------------------------------
AZURE_STORAGE_ACCOUNT=your_storage_account
AZURE_STORAGE_KEY=your_storage_key

# -----------------------------------------------------------------------------
# CRM INTEGRATION (Optional)
# -----------------------------------------------------------------------------
ZOHO_CLIENT_ID=your_zoho_client_id
ZOHO_CLIENT_SECRET=your_zoho_client_secret
ZOHO_REFRESH_TOKEN=your_zoho_refresh_token

# -----------------------------------------------------------------------------
# PARTNER API (Optional)
# -----------------------------------------------------------------------------
PARTNER_API_KEY=your_partner_api_key

# -----------------------------------------------------------------------------
# ADVANCED CONFIGURATION
# -----------------------------------------------------------------------------
# Use AWS Parameter Store instead of .env (production)
USE_PARAMETER_STORE=false

# Subscription pricing
SUBSCRIPTION_PRICE_USDC=10

# Trial prompts for new users
NEW_USER_TRIAL_PROMPTS=5

# JWT expiration for VSCode extension
JWT_EXPIRES_IN_VSCODE=30d
