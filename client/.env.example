# =============================================================================
# ROXONN CLIENT - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# API URL - Backend server URL
VITE_API_URL=http://localhost:5000

# App configuration
VITE_APP_NAME=Roxonn
VITE_APP_URL=http://localhost:3000

# Blockchain Configuration
VITE_XDC_RPC_URL=https://rpc.xinfin.network

# Smart Contract Addresses (optional - defaults exist in code)
# VITE_ROXN_TOKEN_ADDRESS=0x...
# VITE_UNIFIED_REWARDS_CONTRACT_ADDRESS=0x...
# VITE_PROOF_OF_COMPUTE_CONTRACT_ADDRESS=0x...

# Feature flags
VITE_ENABLE_DEBUG=false
